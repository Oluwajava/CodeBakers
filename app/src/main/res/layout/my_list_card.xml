<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="115dp"
    android:layout_height="135dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x_small_padding"
        android:layout_marginBottom="@dimen/x_small_padding"
        android:layout_marginRight="@dimen/x_small_padding">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/artistImage"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:alpha="0.6"
            android:id="@+id/name"
            android:tint="@color/faintGrey"
            android:background="@color/black"
            android:text="Mayokun"
            android:textColor="@color/white"
            android:textStyle="bold"

            />
    </android.support.v7.widget.CardView>
</LinearLayout>